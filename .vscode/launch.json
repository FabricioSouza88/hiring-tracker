{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8080"
      ],
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/.env",
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Agents (Debug)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/agentic/src/main.py",
      "args": [
        "--debug"
      ],
      "cwd": "${workspaceFolder}/agentic",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Frontend (Streamlit)",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "app.py",
        "--server.port",
        "8501",
        "--server.address",
        "0.0.0.0"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Run Script (run.sh)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "cd '/c/Users/fabricio.souza/git/hiring-tracker' && ./run.sh"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "name": "Run Script (run.bat)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "cmd",
      "runtimeArgs": ["/c", "${workspaceFolder}\\run.bat"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}